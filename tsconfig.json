{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["ES6", "DOM"],
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "container/*": ["container/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"],
      "api/*": ["api/*"]
    },
    "incremental": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
// 配置paths时必须首先配置baseUrl